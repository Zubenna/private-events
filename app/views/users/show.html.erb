
<h3>User profile page: <%= @user.username if @user %></h3>
<% if current_user %>
  <%= "Logged in as #{current_user.username}" %> | <%= link_to 'Log Out', logout_path, method: :delete %>
<% end %>
<div>
  <%= link_to "All events", events_path %>
</div>
</div>
   <% if current_user? %>
      <%= link_to "New event", new_event_path %>
   <% else %>
    <%= link_to "Sign in", new_session_path %>
    <%= link_to "New user", new_user_path %>
  <% end %>
</div>
<div class="container">
  <p>Created events: </p>
  <table class="table">
    <thead>
      <tr>
        <th>Event name</th>
        <th>Description</th>
        <th>Event Date</th>
        <th>Event Creator</th>
        <th>Attendees</th>
      </tr>
    </thead>
    <tbody>
        <tr><% @created_events.each do |e| %></tr>
          <td><%= e.title %></td>
          <td><%= e.description %></td>
          <td><%= e.event_date %></td>
          <td><%= e.creator.username %></td>
          <td>
            <% e.attendees.each do |a| %>
              <%= a.username %>,
            <% end %>
          </td>
        <% end %>
    </tbody>
  </table>

  <p>Upcoming events: </p>
    <table class="table">
      <thead>
        <tr>
          <th>Event name</th>
          <th>Description</th>
          <th>Event Date</th>
          <th>Event Creator</th>
          <th>Event Attendees</th>
        </tr>
      </thead>
      <tbody>

          <tr><% @upcoming_events.each do |e| %></tr>
            <td><%= e.title %></td>
            <td><%= e.description %></td>
            <td><%= e.event_date %></td>
            <td><%= e.creator.username %></td>
            <td>
              <% e.attendees.each do |a| %>
                <%= a.username %>
              <% end %>
            </td>
          <% end %>
      </tbody>
    </table>

  <p>Previous events: </p>
    <table class="table">
      <thead>
        <tr>
          <th>Event name</th>
          <th>Place</th>
          <th>Event Date</th>
          <th>Event Creator</th>
          <th>Event Attendees</th>
        </tr>
      </thead>
      <tbody>

          <tr><% @previous_events.each do |e| %></tr>
            <td><%= e.title %></td>
            <td><%= e.description %></td>
            <td><%= e.event_date %></td>
            <td><%= e.creator.name %></td>
            <td>
              <% e.attendees.each do |a| %>
                <%= a.username %>,
              <% end %>
            </td>
          <% end %>
      </tbody>
    </table>
</div>
