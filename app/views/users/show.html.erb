
<h3>User profile page: <%= @user.username if @user %></h3>
<div class="container">
  <p>Created events: </p>
  <table class="table">
    <thead>
      <tr>
        <th>Event name</th>
        <th>Description </th>
        <th>Event Date</th>
        <th>Event Creator</th>
        <th>Attendees</th>
      </tr>
    </thead>
    <tbody>
      <tr><% @created_events.each do |e| %></tr>
         <td><%= e.title %></td>
         <td><%= e.description %></td>
         <td><%= e.event_date %></td>
         <td><%= e.creator.username %></td>
       <% end %>
    </tbody>
  </table
