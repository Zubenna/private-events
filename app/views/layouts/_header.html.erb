<% if current_user == nil && !current_user? %>
  <%= link_to "All events", events_path %>
  <%= link_to "New event", new_event_path %>
  <%= button_to "Home", '/welcome', method: :get %>
<% end %>
<% if current_user && current_user.username != nil %>
  <%= link_to "All events", events_path %>
  <%= link_to "New event", new_event_path %>
  <%= link_to "You Signed in with username #{current_user.username}", user_path(current_user) %>
<% end %>
<% if current_user? %>
  <%= button_to "Log Out", '/logout', method: :delete %>
<% end %>